<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/ladder_textView1"
        style="@style/usertext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="天梯排行"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ladder_1"
        style="@style/usertext"
        android:layout_below="@+id/ladder_textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:text="1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ladder_2"
        style="@style/usertext"
        android:layout_below="@+id/ladder_1"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/ladder_1"
        android:text="2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ladder_3"
        style="@style/usertext"
        android:layout_below="@+id/ladder_1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ladder_1"
        android:text="3"
        android:textSize="15sp" />

    <Button
        android:id="@+id/ladder_ranktable"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ladder_textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/ranktable" />

    <TextView
        android:id="@+id/ladder_rank"
        style="@style/usertext"
        android:layout_below="@+id/ladder_ranktable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Rank"
        android:textSize="15sp" />

    <Button
        android:id="@+id/ladder_matchbutton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ladder_rank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/startpk" />

    <TextView
        android:id="@+id/ladder_textView2"
        style="@style/usertext"
        android:layout_below="@+id/ladder_matchbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="开始排位"
        android:textSize="15sp" />

</RelativeLayout>